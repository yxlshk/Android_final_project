<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_plan_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="30sp"
        android:text="添加新计划"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/new_plan_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/white"
        android:id="@+id/line"
        android:layout_marginTop="20dp"> </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_plan_time_label"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="时    间："
        android:layout_marginTop="42dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:id="@+id/new_plan_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintLeft_toRightOf="@+id/new_plan_time_label"
        android:background="@drawable/login_input_style"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_plan_place_label"
        app:layout_constraintTop_toBottomOf="@+id/new_plan_time_label"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="地    点："
        android:layout_marginTop="22dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:id="@+id/new_plan_place"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_plan_time_label"
        app:layout_constraintLeft_toRightOf="@+id/new_plan_place_label"
        android:background="@drawable/login_input_style"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_plan_partner_label"
        app:layout_constraintTop_toBottomOf="@+id/new_plan_place_label"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="约跑人："
        android:layout_marginTop="22dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:id="@+id/new_plan_partner"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_plan_place_label"
        app:layout_constraintLeft_toRightOf="@+id/new_plan_partner_label"
        android:background="@drawable/login_input_style"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toTopOf="@+id/cancel_new_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/ok_new_btn"
        android:background="@drawable/signin_button_shape"
        android:layout_margin="10dp"
        android:text="确定"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:alpha="0.9"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/cancel_new_btn"
        android:text="取消"
        android:textSize="20sp"
        android:background="@drawable/sign_up_button_shape"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:alpha="0.9"/>
</android.support.constraint.ConstraintLayout>