<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_asking_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="30sp"
        android:text="发布约跑贴"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/new_asking_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/white"
        android:id="@+id/line"
        android:layout_marginTop="20dp"> </View>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/new_asking_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/login_input_style"
        android:layout_marginTop="30dp"
        android:minLines="10"
        android:gravity="top"
        android:paddingTop="8dp"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toTopOf="@+id/cancel_new_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/ok_new_btn"
        android:background="@drawable/signin_button_shape"
        android:layout_margin="10dp"
        android:text="发布"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:alpha="0.9"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/cancel_new_btn"
        android:text="取消"
        android:textSize="20sp"
        android:background="@drawable/sign_up_button_shape"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:alpha="0.9"/>
</android.support.constraint.ConstraintLayout>